<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Product Id="*" Name="Remote Control App" Language="1033" Version="1.0.0.0" Manufacturer="Your Company" UpgradeCode="A1B2C3D4-5E6F-7890-ABCD-EF1234567890">
    <Package InstallerVersion="200" Compressed="yes" InstallScope="perMachine" />

    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." 
                  AllowSameVersionUpgrades="no" 
                  Schedule="afterInstallInitialize" 
                  MigrateFeatures="yes" />
    <MediaTemplate EmbedCab="yes" />

    <!-- Custom actions to kill existing processes -->
    <CustomAction Id="KillRemoteControlApp" 
                  Directory="SystemFolder" 
                  ExeCommand='taskkill /F /IM RemoteControlApp.exe /T' 
                  Execute="immediate" 
                  Return="ignore" />
    
    <!-- Custom action to start application after installation -->
    <CustomAction Id="StartRemoteControlApp" 
                  Directory="INSTALLFOLDER" 
                  ExeCommand="RemoteControlApp.exe" 
                  Execute="commit" 
                  Return="asyncNoWait" 
                  Impersonate="yes" />

    <Feature Id="ProductFeature" Title="Remote Control App" Level="1">
      <ComponentGroupRef Id="ProductComponents" />
      <ComponentRef Id="ApplicationShortcut" />
      <ComponentRef Id="ApplicationRegistryEntries" />
      <ComponentRef Id="PathEnvironmentVariable" />
    </Feature>

    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="SystemFolder" />
      <Directory Id="ProgramFilesFolder">
        <Directory Id="INSTALLFOLDER" Name="Remote Control App">
          <Component Id="ApplicationShortcut" Guid="*">
            <Shortcut Id="ApplicationStartMenuShortcut"
                      Name="Remote Control App"
                      Description="Remote Control Tray Application"
                      Target="[INSTALLFOLDER]RemoteControlApp.exe"
                      WorkingDirectory="INSTALLFOLDER"
                      Directory="ProgramMenuFolder" />
            <RemoveFolder Id="INSTALLFOLDER" On="uninstall" />
            <RegistryValue Root="HKCU" Key="Software\Microsoft\RemoteControlApp" Name="installed" Type="integer" Value="1" KeyPath="yes" />
          </Component>
          <Component Id="ApplicationRegistryEntries" Guid="*">
            <RegistryKey Root="HKLM" Key="SOFTWARE\Microsoft\Windows\CurrentVersion\Run">
              <RegistryValue Name="RemoteControlApp" Type="string" Value="[INSTALLFOLDER]RemoteControlApp.exe" />
            </RegistryKey>
          </Component>
          <Component Id="PathEnvironmentVariable" Guid="*">
            <Environment Id="PATH" Name="PATH" Value="[INSTALLFOLDER]" Permanent="no" Part="last" Action="set" System="yes" />
            <RegistryValue Root="HKCU" Key="Software\Microsoft\RemoteControlApp" Name="PathAdded" Type="integer" Value="1" KeyPath="yes" />
          </Component>
        </Directory>
      </Directory>
      <Directory Id="ProgramMenuFolder" />
    </Directory>

    <ComponentGroup Id="ProductComponents" Directory="INSTALLFOLDER">
      <Component Id="RemoteControlApp.exe" Guid="*">
        <File Id="RemoteControlApp.exe" Source="$(var.RemoteControlApp.TargetPath)" />
      </Component>
    </ComponentGroup>

    <!-- Installation sequence -->
    <InstallExecuteSequence>
      <Custom Action="KillRemoteControlApp" Before="InstallValidate">NOT Installed</Custom>
      <Custom Action="StartRemoteControlApp" Before="InstallFinalize">NOT Installed</Custom>
    </InstallExecuteSequence>

    <UI>
      <UIRef Id="WixUI_Minimal" />
    </UI>

    <Property Id="WIXUI_INSTALLDIR" Value="INSTALLFOLDER" />
  </Product>
</Wix>
